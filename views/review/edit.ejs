<% include ../partials/header %>

    <div class="container main_container">
        <div class="well well-sm text_center">
            <h2>
               Edit your review
            </h2>
        </div>

        <div class="space_add"></div>
		<div class="textbox_review">
			<divv><h5 class = "text-danger">
				For security reason, please do not use $ in review or review's title. 
				</h5></divv>
			<div class="space_add_small"></div>
            <form action = "/review/<%= review._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <span>Please select number of star again:</span>
                    <input type="radio" name="star" value="0"> 0
                    <input type="radio" name="star" value="1"> 1
                    <input type="radio" name="star" value="2"> 2
                    <input type="radio" name="star" value="3"> 3
                    <input type="radio" name="star" value="4"> 4
                    <input type="radio" name="star" value="5"> 5
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="review[reviewTitle]" value="<%= review.reviewTitle %>">
                </div>
				<div class = "well well-sm">
					<h5 class = "text-info">
						An option to upload image directly from device would be released on 07.09.19
					</h5>
				</div>
                <div class="form-group">
                    <input class="form-control" type="text" name="review[image]" value="<%= review.image %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="text" name="review[reviewContent]" value="<%= review.reviewContent %>">
                </div>
				<button class="btn btn-primary btn-block button_long">Confirm Edit</button>
            </form>
        </div>
        <div class="space_add"></div>
        <a class="btn btn-danger bth-large" href="/review">Back To Review Page</a>
        <div class="space_add"></div>
    </div>

    <%include ../partials/footer %>

