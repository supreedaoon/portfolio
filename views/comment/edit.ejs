<% include ../partials/header %>

<div class="container main_container pt-2 pb-3">
        <div class="card card-body bg-light p-4 mt-1">
            <h1 class = "display-5">
                Edit reponse to the review: "<span class = "text_italic"><%= review.reviewTitle %></span>"
            </h1>
    	</div>
        <div class = "py-2 text-center">
			<divv><h6 class = "text-danger float-right">
				<strong>*Characters: $, {, &&, || are forbidden</strong>
			</h6></divv>
			<form action="/review/<%= review._id %>/comment/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group pt-2">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
			    <div class="form-group py-2">
                    <button class="btn btn-sm btn-primary">Confirm Edit</button>
                </div>
            </form>

        </div>
	    <a class="btn btn-danger btn-sm my-3" href="/review">Back To Review Page</a>
</div>

<% include ../partials/footer %>