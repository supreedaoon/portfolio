<%include ../partials/header %>

    <div class="container main_container">
        <div class="card card-body bg-light p-4 mt-1">
            <h1 class="display-5">
                <%= products[index].name %>
            </h1>
        </div>

        <div class="row my-3 p-2">
            <div class="col-lg-4 col-md-6 col-sm-6" >
				<div class = "px-3">
                <img src="<%= products[index].image %>" class = "img_order">
				</div>
				<div class = "px-3 ref_link_size">
                            <a href='http://www.freepik.com'>
                                <%= products[index].att %>
                            </a>
                        </div>
            </div>
            <div div class="col-lg-8 col-md-6 col-sm-6 pl-5">
                <div class="py-3">
					<h5 class = "display-5">
					"<%= products[index].desc %>"	
						<br>
                        <p class="text_italic">-
                        <small><%= products[index].author %>-</small></p>
					</h5>
					
                </div>
                <div>
					<h5 class = "display-5">
                    <%= products[index].price %><span class = "text_space"> Baht</span>
					</h5>
                </div>
				<div>
            <form action="/onlineorder" method="POST">
                <div class="form-group pt-2">
                    <input type="hidden" name="index" value="<%= index %>">
                </div>

                <div class="form-group py-2">
                    <button class="btn btn-xs btn-primary text_space">Add to cart <i class="fas fa-cart-plus"></i></button>
                </div>
            </form>
        </div>
            </div>
        </div>

        
    </div>

    <%include ../partials/footer %>